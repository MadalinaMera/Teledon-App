<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="242.0" prefWidth="241.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.LogInController">
    <children>
        <Label layoutX="63.0" layoutY="36.0" text="Welcome!">
            <font>
                <Font name="Cambria Math" size="27.0" />
            </font>
            <effect>
                <Glow />
            </effect>
        </Label>
        <TextField fx:id="username" alignment="CENTER" layoutX="33.0" layoutY="84.0" prefHeight="26.0" prefWidth="167.0" promptText="Username" />
        <Button fx:id="loginButton" layoutX="92.0" layoutY="162.0" mnemonicParsing="false" onAction="#loginButtonClicked" text="Log in" />
        <Text fx:id="usernameError" fill="#ac4444" layoutX="73.0" layoutY="215.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Wrong username!" visible="false" />
      <PasswordField fx:id="password" alignment="CENTER" layoutX="33.0" layoutY="123.0" prefHeight="26.0" prefWidth="167.0" promptText="Password" />
    </children>
</AnchorPane>
